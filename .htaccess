# Enable rewrite engine
RewriteEngine On

# Ensure the request is not for an existing file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Exclude under-development.php from the redirect to prevent loops
RewriteCond %{REQUEST_URI} !^/under-development\.php$

# Redirect to under-development.php
RewriteRule ^(.*)$ under-development.php [L]

# Alternative method using ErrorDocument (use this if the above doesn't work)
ErrorDocument 404 /under-development.php